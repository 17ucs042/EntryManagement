<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityClasses.EntryList"
    android:background="#FFF">

    <TextView
        android:id="@+id/no_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:textColor="#000"
        android:text="No Entries Currently"/>

    <TextView
        android:id="@+id/entry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Entries"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textSize="30sp"/>

    <ListView
        android:id="@+id/entry_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/make_entry"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:layout_below="@id/entry_text"
        android:layout_marginTop="40dp"
        android:divider="@android:color/transparent"/>

    <Button
        android:id="@+id/make_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make a new Entry"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:textColor="#FFF"/>

</RelativeLayout>